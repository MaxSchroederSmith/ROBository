<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/felt">


    <Button
        android:id="@+id/Stand"
        style="@style/Widget.Material3.Button"
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="143dp"
        android:backgroundTint="#A62020"
        android:text="Stand"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Split"
        app:layout_constraintStart_toEndOf="@+id/Hit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Hit"
        style="@style/Widget.Material3.Button"
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="143dp"
        android:autoText="false"
        android:backgroundTint="#A62020"
        android:text="Hit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Stand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Split"
        style="@style/Widget.Material3.Button"
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="143dp"
        android:backgroundTint="#A62020"
        android:backgroundTintMode="src_over"
        android:text="Split"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Stand"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>